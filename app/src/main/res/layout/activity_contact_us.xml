<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/design_default_color_primary_dark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="10dp"
        android:text="For any query, Please contact us using below options"
        android:textSize="22dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/phone_1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/txt_1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F1F2FB">

        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phonelogo"/>

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-7016974471"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/phone_1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F1F2FB">

        <ImageView
            android:id="@+id/clock_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clock2"/>

        <TextView
            android:id="@+id/contact_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 AM - 06:00 PM"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mail_1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/time_1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F1F2FB">

        <ImageView
            android:id="@+id/mail_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email"/>

        <TextView
            android:id="@+id/contact_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="darshanbhadeshiya333@gmail.com"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>